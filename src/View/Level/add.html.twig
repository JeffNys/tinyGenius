{% extends 'layout.html.twig' %}

{% block title %}Ajouter un niveau{% endblock %}

{% block content %}
    <h1>Ajouter un niveau</h1>
    <form method="post" enctype="multipart/form-data">
    <div>
        <label for="level" class="form-label mt-4">Niveau : </label>
        <input type="text" value="{{ level.level }}" name="level" class="form-control">
    </div>
    <div class="form-group">
        <label for="description" class="form-label mt-4">Description :</label>
        <textarea class="form-control" name="description" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="logo" class="form-label mt-4">Logo :</label>
        <input class="form-control" type="file" name="logo">
    </div>
    <input type="submit" class="btn btn-primary mt-3" value="Ajouter le niveau">
</form>
<a href="/level" class="mt-3">retourner Ã  la liste</a>
{% endblock %}
