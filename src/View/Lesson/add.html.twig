{% extends 'layout.html.twig' %}

{% block title %}Ajouter un cour{% endblock %}

{% block content %}
    <h1>Ajouter un cour</h1>
    <form method="post" enctype="multipart/form-data">
    <div>
        <label for="name" class="form-label mt-4">Nom du cours : </label>
        <input type="text" value="{{ lesson.name }}" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="description" class="form-label mt-4">Description :</label>
        <textarea class="form-control" name="description" rows="3">{{ lesson.description }}</textarea>
    </div>
    <div class="form-group">
        <label for="level_id" class="form-label mt-4">Niveau</label>
        <select class="form-select" name="level_id">
        {%  level in levels %}
            <option value="{{ level.id }}" >{{ level.level }}</option>
        {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="logo" class="form-label mt-4">Logo :</label>
        <input class="form-control" type="file" name="logo">
    </div>
    <input type="submit" class="btn btn-primary mt-3" value="Ajouter le niveau">
</form>
<a href="/lesson" class="mt-3">retourner Ã  la liste</a>
{% endblock %}
