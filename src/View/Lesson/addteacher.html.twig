{% extends 'layout.html.twig' %}

{% block title %}Assigner un prof{% endblock %}

{% block content %}
    <h1>Assigner un prof</h1>
    <form method="post">
    <div class="form-group">
        <label for="teacher_id" class="form-label mt-4">cour :</label>
        <select class="form-select" name="lesson_id">
            <option value="{{ offer.lesson_id }}" >{{ lesson.name }}</option>
        </select>
    </div>
    <div class="form-group">
        <label for="teacher_id" class="form-label mt-4">prof :</label>
        <select class="form-select" name="teacher_id">
            <option value="" >-- Selectionner un prof --</option>
        {% for teacher in teachers %}
            <option value="{{ teacher.id }}">{{ teacher.firstname }} {{ teacher.lastname }} - {{ teacher.email }}</option>
        {% endfor %}
        </select>
    </div>
    <input type="submit" class="btn btn-primary mt-3 mb-3" value="Assigner le prof">
</form>
