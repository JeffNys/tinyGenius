{% extends 'layout.html.twig' %}

{% block title %}Modifier un niveau{% endblock %}

{% block content %}
    <h1>Modifier un niveau</h1>
    <form method="post" enctype="multipart/form-data">
    <div>
        <label for="lesson" class="form-label mt-4">Niveau : </label>
        <input type="text" value="{{ lesson.lesson }}" name="lesson" class="form-control">
    </div>
    <div class="form-group">
        <label for="description" class="form-label mt-4">Description :</label>
        <textarea class="form-control" name="description" rows="3">{{ lesson.description }}</textarea>
    </div>
    {% if lesson.logo != "" %}
    <img src="/assets/images/upload/{{ lesson.logo }}" alt="logo du niveau {{ lesson.lesson }}" class="image-size mt-3">
    {% endif %}
    <div class="form-group">
        <label for="logo" class="form-label mt-4">Logo :</label>
        <input class="form-control" type="file" name="logo">
    </div>
    <input type="submit" class="btn btn-primary mt-3" value="Modifier le niveau">
</form>
    
<a href="/lesson" class="mt-3">retourner Ã  la liste</a>
{% endblock %}
