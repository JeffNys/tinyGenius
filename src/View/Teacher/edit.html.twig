{% extends 'layout.html.twig' %}

{% block title %}Modifier un cours{% endblock %}

{% block content %}
        <h1>Ajouter un prof</h1>
    <form method="post" enctype="multipart/form-data">
    <div>
        <label for="title" class="form-label mt-4">Pseudo : </label>
        <input type="text" value="{{ teacher.title }}" name="title" class="form-control">
    </div>
    <div class="form-group">
        <label for="description" class="form-label mt-4">Description :</label>
        <textarea class="form-control" name="description" rows="3">{{ teacher.description }}</textarea>
    </div>
    <div class="form-group">
        <label for="teacher_id" class="form-label mt-4">Compte :</label>
        <select class="form-select" name="user_id">
            <option value="" >-- Selectionner un compte --</option>
        {% for user in users %}
            <option value="{{ user.id }}" {% if user.id == teacher.user_id %}selected{% endif %}>{{ user.firstname }} {{ user.lastname }}</option>
        {% endfor %}
        </select>
    </div>
    <p class="mt-4">Photo :</p>
    {% if lesson.logo != "" %}
    <img src="/assets/images/upload/{{ teacher.image }}" alt="photo de {{ teacher.title }}" class="image-size mt-3">
    {% else %}
    <p>il n'y a pas de photo actuellement pour ce prof</p>
    {% endif %}
    <div class="form-group">
        <label for="image" class="form-label mt-4">Uploader une autre photo :</label>
        <input class="form-control" type="file" name="image">
    </div>
    <input type="submit" class="btn btn-primary mt-3 mb-3" value="Modifier le prof">
</form>
<a href="/teacher/list" class="mt-3">retourner Ã  la liste des profs</a>
{% endblock %}
