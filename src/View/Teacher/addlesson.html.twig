{% extends 'layout.html.twig' %}

{% block title %}Assigner une lesson{% endblock %}

{% block content %}
    <h1>Assigner une lesson</h1>
    <form method="post">
    <div class="form-group">
        <label for="teacher_id" class="form-label mt-4">Prof :</label>
        <select class="form-select" name="teacher_id">
            <option value="{{ offer.teacher_id }}" >{{ teacher.title }}</option>
        </select>
    </div>
    <div class="form-group">
        <label for="lesson_id" class="form-label mt-4">Cours :</label>
        <select class="form-select" name="lesson_id">
            <option value="" >-- Selectionner un cours --</option>
        {% for lesson in lessons %}
            <option value="{{ lesson.id }}">{{ lesson.name }}</option>
        {% endfor %}
        </select>
    </div>
    <input type="submit" class="btn btn-primary mt-3 mb-3" value="Assigner le cours">
</form>
<a href="/teacher/list" class="mt-3">retourner Ã  la liste des profs</a>
{% endblock %}
